#! /bin/sh
build_dir=$1
cache_dir=$2
env_dir=$3
bp_dir=$(cd $(dirname $0); cd ..; pwd)

export BUILDPACK_PATH=$bp_dir

echo "Adding libevent library support"

echo "mkdir -p $build_dir/vendor"
mkdir -p $build_dir/vendor

echo "Running tar xzf $bp_dir/vendor/libevent-2.0.22-stable.tar.gz -C $build_dir/vendor/"
tar xzf $bp_dir/vendor/libevent-2.0.22-stable.tar.gz -C $build_dir/vendor/
tar xzf $bp_dir/vendor/hiredis-0.13.3.tar.gz -C $build_dir/vendor/
ln -s $build_dir/vendor/hiredis-0.13.3 $build_dir/vendor/hiredis
ln -s $build_dir/vendor/hiredis-0.13.3 $build_dir/hiredis

echo "> ls $build_dir/vendor/hiredis"
ls $build_dir/vendor/hiredis
echo "> ls $build_dir"
ls $build_dir
echo "> ls $build_dir/hiredis"
ls $build_dir/hiredis
echo "> hiredis/async.h"
ls hiredis/async.h

# Update the PATH
echo "Building runtime environment"
mkdir -p $build_dir/.profile.d
echo "export PATH=\"\$HOME/vendor:\$HOME/vendor/hiredis:\$HOME/vendor/libevent-2.0.22-stable/:\$PATH\";" > $build_dir/.profile.d/libevent.sh
echo "export LD_LIBRARY_PATH=\"\$LD_LIBRARY_PATH:\$HOME/vendor:\$HOME/vendor/hiredis:\$HOME/vendor/libevent-2.0.22-stable/::\$HOME/vendor/libevent-2.0.22-stable/include\";" >> $build_dir/.profile.d/libevent.sh
echo "export LDFLAGS=\"-L\$HOME/vendor/libevent-2.0.22-stable -L\$HOME/vendor/libevent-2.0.22-stable/include -L\$HOME/vendor -L\$HOME/vendor/hiredis\"" >> $build_dir/.profile.d/libevent.sh
echo "export CFLAGS=\"-I\$HOME/vendor/libevent-2.0.22-stable -I\$HOME/vendor/libevent-2.0.22-stable/include -I\$HOME/vendor -I\$HOME/vendor/hiredis\"" >> $build_dir/.profile.d/libevent.sh
